<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Student</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-dark bg-primary p-3">
      <a href="/students" class="navbar-brand">Student Manager</a>
    </nav>

    <div class="container mt-4">
      <h2>Add New Student</h2>

      <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% errors.forEach(e => { %>
          <li><%= e %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form action="/students" method="POST" class="card p-4 shadow-sm">
        <div class="mb-3">
          <label class="form-label">Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            value="<%= old?.name || '' %>"
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label">Age</label>
          <input
            type="number"
            name="age"
            class="form-control"
            value="<%= old?.age || '' %>"
            required
          />
        </div>

        <div class="mb-3">
           <label class="form-label">Course</label>
            <select name="course" class="form-select" required>
            <option value="">Select Course</option>
            <% const courses = ["BSIT","BSCS","BSEE","BSCE","BSARCHI","BSMATH","BCED"]; %>
            <% courses.forEach(c => { %>
            <option value="<%= c %>" <%= old.course === c ? "selected" : "" %>><%= c %></option>
            <% }) %>
            </select>
        </div>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input
            type="email"
            name="email"
            class="form-control"
            value="<%= old?.email || '' %>"
            required
          />
        </div>

        <button class="btn btn-success">Create</button>
      </form>
    </div>
  </body>
</html>
