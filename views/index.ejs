<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
  </head>
  <body>
    <h1>All Registered Users</h1>
    <a href="/logout">Logout</a>

    <table border="1">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= new Date(user.createdAt).toLocaleString() %></td>
          <td><%= new Date(user.updatedAt).toLocaleString() %></td>
          <td>
            <a href="/users/<%= user._id %>">View</a>
            <% if (user._id.toString() === currentUserId) { %> |
            <a href="/users/<%= user._id %>/edit">Edit</a>
            |
            <form
              action="/users/<%= user._id %>/delete"
              method="POST"
              style="display: inline"
            >
              <button
                type="submit"
                onclick="return confirm('Delete your account?')"
              >
                Delete
              </button>
            </form>
            <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
